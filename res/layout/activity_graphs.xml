<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="org.worldbank.seg_2g.worldbankapp.GraphsActivity"
    tools:ignore="MergeRootFrame" >
    
    <LinearLayout 
        android:id="@+id/list_layout"
        android:layout_width="@dimen/list_fragment_width"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        
        <EditText
            android:id="@+id/countries_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textSize="14sp"
            android:hint="@string/countries_text_view_hint"
            android:inputType="textCapWords|textNoSuggestions"
            android:imeOptions="flagNoFullscreen|actionGo" />
                
        <ListView
            android:id="@+id/countries_list_view"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/graph_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/graph_layout_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/graph_label_text" />
             
    </LinearLayout>

</LinearLayout>